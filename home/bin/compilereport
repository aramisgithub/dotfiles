#!/usr/bin/env bash

pandoc -f markdown -t latex -o document.tex document.md --template="$HOME/.homesick/repos/dotfiles/pandoctemplates/article/template.tex" --top-level-division=section

pdflatex document.tex
biber document
pdflatex document.tex
pdflatex document.tex

mv document.md mdtmp
mv refs.bib bibtmp
mv document.pdf output.pdf

rm document*

if [ -e ./texput.log ]
then
  rm texput.log
fi

mv mdtmp document.md
mv bibtmp refs.bib

