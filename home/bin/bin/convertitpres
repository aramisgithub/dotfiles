#!/usr/bin/env fish

rm (cat $HOME/.currentfile).pdf
sed -r 's/([A-Za-z0-9.,:?;\"\')|] )([A-Z][A-Z]+)/\1\\abbr{\2}/g' (cat $HOME/.currentfile) > (cat $HOME/.currentfile).asc
pandoc -t beamer (cat $HOME/.currentfile) -o (cat $HOME/.currentfile).tex --template=$HOME/code/argonclass/pandoc/presentation.tex --slide-level=2
osascript /Library/Scripts/texshop.scpt (cat $HOME/.currentfile).tex

