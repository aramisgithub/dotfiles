#!/usr/bin/env bash

# Preserve PDF
mv $(cat $HOME/.currentfile).pdf $(cat $HOME/.currentfile)pdf

# Delete all files generated off the markdown file
rm $(cat $HOME/.currentfile).*

# Also delete any of LaTeX's error files
rm $(dirname $(cat $HOME/.currentfile))/*.fls
rm $(dirname $(cat $HOME/.currentfile))/*.log

# Get PDF back
mv $(cat $HOME/.currentfile)pdf $(cat $HOME/.currentfile).pdf
