#!/usr/bin/env bash

pandoc -f markdown -t latex -o document.tex document.md --template=$HOME/dotfiles/pandoctemplates/article/template.tex --top-level-division=section

lualatex document.tex
biber document
lualatex document.tex
lualatex document.tex

mv document.md mdtmp
mv refs.bib bibtmp
mv document.pdf output.pdf

rm document*

if [ -e ./texput.log ]
then
  rm texput.log
fi

mv mdtmp document.md
mv bibtmp refs.bib

